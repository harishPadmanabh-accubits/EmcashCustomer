<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_border_coin"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:transitionName="dp"
        android:src="@drawable/coin_border_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/sample_dp"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="@+id/iv_border_coin"
        app:layout_constraintEnd_toEndOf="@+id/iv_border_coin"
        app:layout_constraintStart_toStartOf="@+id/iv_border_coin"
        app:layout_constraintTop_toTopOf="@+id/iv_border_coin"
        android:id="@+id/iv_dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.RoundImageStyle" />
</RelativeLayout>