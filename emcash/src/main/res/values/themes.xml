<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Emcash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor">@color/app_sky_blue</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>




    <style name="WhiteRoundedButton"  parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_drawable1</item>
        <item name="android:cursorVisible">true</item>
        <item name="maxLines">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/biennale_book</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:editable">true</item>
        <item name="android:inputType">number</item>
    </style>


    <style name="BlueRoundedButton"  parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/app_blue</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">22dp</item>
        <item name="lineHeight">20dp</item>
        <item name="fontFamily">@font/biennale_regular</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.RoundButton</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.RoundButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">22dp</item>
    </style>



    <style name="GreyRoundedButton"  parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/grey</item>

        <item name="cornerRadius">22dp</item>
        <item name="lineHeight">20dp</item>
        <item name="fontFamily">@font/biennale_regular</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>


    <style name="SubHeadingText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="lineHeight">20dp</item>
    </style>
    <style name="TermsANdConditionsDescStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="lineHeight">22dp</item>
    </style>

<style name="HeadingText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/biennale_bold</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.RoundImageStyle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.EmcashWhiteStatusBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
    <style name="Theme.EmcashBlueStatusBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor">@color/app_blue</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
    <style name="TabItemTextAppearence" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/biennale_book</item>
    </style>
    <style name="WhiteRoundedTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/biennale_book</item>
        <item name="lineHeight">20dp</item>
        <item name="android:background">@drawable/white_stroke_rounded</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">48dp</item>
        <item name="android:paddingEnd">48dp</item>

    </style>
    <style name="WhiteRoundedTextSamllStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/biennale_book</item>
        <item name="lineHeight">20dp</item>
        <item name="android:background">@drawable/white_stroke_rounded</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>

    </style>

    <style name="PinView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/pin_empty</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:editable">false</item>
    </style>


</resources>