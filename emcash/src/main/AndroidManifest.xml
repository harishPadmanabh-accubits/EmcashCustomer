<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.emcash.customerapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:label="@string/app_name"
        android:theme="@style/Theme.Emcash"
        android:usesCleartextTraffic="true"
        tools:replace="android:theme">
        <activity android:name=".ui.viewAllTransactions.ViewAllTransactionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.loadEmcash.EmpayWebViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.convertEmcash.BankDetailsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Emcash"
            />
        <activity
            android:name=".ui.loadEmcash.PayWithNewCardActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            />
        <activity
            android:name=".ui.notifications.NotificationsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.newPayment.NewPaymentActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.rewards.EmscoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.qr.QrScannerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.rewards.RewardDetails"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EmcashBlueStatusBar" />
        <activity
            android:name=".ui.rewards.MyRewardsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EmcashWhiteStatusBar" />
        <activity
            android:name=".ui.history.TransactionHistory"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EmcashWhiteStatusBar" />
        <activity
            android:name=".ui.convertEmcash.ConvertEmcashActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.loadEmcash.TransactionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.loadEmcash.LoadEmcashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EmcashWhiteStatusBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.wallet.WalletActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.home.HomeActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EmcashWhiteStatusBar" />
        <activity
            android:name=".ui.prepare.PrepareEmCashActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EmcashBlueStatusBar" />
        <activity
            android:name=".ui.terms.TermsAndConditionsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EmcashWhiteStatusBar" />
        <activity
            android:name=".ui.intro.IntroActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Emcash" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>