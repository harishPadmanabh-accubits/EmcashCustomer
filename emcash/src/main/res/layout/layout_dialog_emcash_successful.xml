<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/white_upper_cut"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="@dimen/dp12"
        android:elevation="@dimen/dp12"
        android:layout_marginTop="@dimen/dp40"
        android:src="@drawable/ic_success"
        />
    <TextView
        android:id="@+id/tv_dialog_message"
        style="@style/SubHeadingText"
        android:layout_width="@dimen/dp300"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp24"
        android:fontFamily="@font/biennale_medium"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="154 EmCash has been successfully converted to cash."
        android:textAlignment="center" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_okay"
        style="@style/BlueRoundedButton"
        android:layout_width="@dimen/dp200"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp24"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp24"
        android:layout_marginBottom="@dimen/dp40"
        android:onClick="onClick"
        android:text="Okay" />
</LinearLayout>